<article class="rounded h-auto shadow flex-col">
  <img src="{{image_url}}" alt="{{description}}" class="w-full">
  <h3 class="p-2 bg-gray-200 text-gray-600 font-black tracking-widest">{{title}}</h3>
  <p id="itemID" class="hidden">{{id}}</p>
  <p class="p-2 text-gray-600">
    {{description}}
  </p>
  <div class="flex justify-center">
    {{#unless isOwner}}
    <a href="mailto:{{user.email}}" class="bg-transparent hover:bg-blue-500 text-blue-700 font-semibold hover:text-white py-2 px-4 border border-blue-500 hover:border-transparent rounded">Contact Owner</a>
    {{/unless}}
    {{#if isOwner}}
    <a href="#" id="unlist" data-item={{id}} class="bg-transparent hover:bg-blue-500 text-blue-700 font-semibold hover:text-white py-2 px-4 border border-blue-500 hover:border-transparent rounded">Unlist</a>
    {{/if}}
  </div>
  
</article>