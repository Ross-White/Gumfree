<div href="dashboard/additem" class="min-h-screen bg-gray-50" >
    <form method="post" action="formsub">
        <p> Name of your product:
            <input type="text" name="title" maxlength="50" id="title"/>
        </p>
        <p> Description: </p>
            <textarea name="description" maxlength="400" "50" id="desription">Enter your product description</textarea>
        <p> Quantity:
            <input type="text" name="quantity" "50" id="quantity"/>
        </p>
        <p> Category:
            <select name="category">
                <option value="furniture" id="furniture">Furniture</option>
                <option value="transport" id="transport">Transport</option>
                <option value="electronics" id="electronics">Electronics</option>
                <option value="books" id="books">Books</option>
                <option value="garden" id="garden">Garden</option>
                <option value="clothing" id="clothing">Clothing</option>
            </select>
        </p>
        <p> Offered:
            <input type="checkbox" name="offered" checked="checked" /> Yes
            <input type="checkbox" name="offered" /> No
        </p>
        <p> Available:
            <input type="checkbox" name="available" checked="checked" /> Yes
            <input type="checkbox" name="available" /> No
        </p>
    </form>
    <form method="post" action="formsub" enctype="multipart/form-data">
        <p>Please upload an image of your product</p>
        <input type="text" placeholder="filename" name="desc" />
        <input type="file" name="product-image" />
        <input type="submit" value="submit" />
    </form>
</div>

<script src="./js/newItem.js"></script>