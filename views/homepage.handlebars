<div class="min-h-screen bg-gray-50">
    {{!-- category cards --}}
    <h1 class="text-2xl px-4 pt-2">Featured categories</h1>
    <div class="grid grid-cols-1 md:grid-cols-3 grid-rows-2 gap-4 p-4 grid-flow-row-dense">
        {{#each plainData as |category|}}
        <a href="items/category/{{id}}">
            <article class="p-4 bg-green-400 rounded h-60 text-gray-50 font-black tracking-widest shadow"
                style="background-image: url({{img_path}}); background-size: cover;">{{name}}</article>
        </a>
        {{/each}}
        <a href="/">
            <article class="p-4 bg-green-400 rounded h-60 text-gray-50 font-black tracking-widest shadow"
                style="background-image: url(/assets/img/category_images/map.jpg); background-size: cover;">In my area
            </article>
        </a>
        <a class="col-end-auto" href="/">
            <article class="p-4 bg-green-400 rounded h-60 text-gray-50 font-black tracking-widest shadow"
                style="background-image: url(/assets/img/category_images/latest.jpg); background-size: cover;">Latest ads
            </article>
        </a>
    </div>

</div>